// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider     = "prisma-client-js"
  moduleFormat = "esm"
}

datasource db {
  provider = "sqlite"
}

model ReleaseDateCache {
  id          Int       @id @default(autoincrement())
  trackName   String
  artistName  String
  releaseDate String?   // YYYY-MM-DD format or null if not found
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([trackName, artistName])
  @@index([trackName])
  @@index([artistName])
}

model SpotifyPlaylistCache {
  id          String    @id // Playlist URL
  tracksJson  String    // Serialized JSON of the tracks
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AudioSourceCache {
  id                Int      @id @default(autoincrement())
  trackName         String
  artistName        String
  audioUrl          String?
  spotifyPreviewUrl String?
  youtubeUrl        String?
  coverImage        String?
  status            String   // 'found' or 'missing'
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([trackName, artistName])
  @@index([trackName])
  @@index([artistName])
}
